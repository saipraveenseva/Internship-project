<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is used for adding a new expense to the db -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/money2">
    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/expType"
        android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#ff00ff00"/>

    <EditText
        android:id="@+id/eptype"
        android:layout_width="match_parent"
        android:layout_height="36dp" >

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/des"
        android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#ff00ff00"/>

    <EditText
        android:id="@+id/edes"
        android:layout_width="match_parent"
        android:layout_height="36dp" >

    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_weight=".64"
            android:background="@drawable/keypad1"
            android:onClick="store"
            android:text="Store"
            android:textColor="#ff00ff00" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:onClick="home"
            android:text="Go Home"
            android:textColor="#ff00ff00" 
            android:layout_weight=".64" android:background="@drawable/keypad1"/>

    </LinearLayout>

</LinearLayout>