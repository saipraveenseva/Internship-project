<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is used for home page or credentials accessing page -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" android:background="@drawable/money2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".43" >

        <EditText
            android:id="@+id/hpass"
            android:layout_width="250dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="116dp"
            android:gravity="center_horizontal"
            android:hint="Enter password"
            android:password="true" >
        </EditText>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="6mm"
            android:layout_below="@+id/hpass"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:onClick="login"
            android:text="Login" android:background="@drawable/keypad1"/>
    </RelativeLayout>

</LinearLayout>